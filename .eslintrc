{
  "extends": ["airbnb-base", "prettier"],
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "comma-dangle": ["error", "never"],
    "no-unused-vars": ["warn"],
    "no-var": ["off"],
    "one-var": ["off"],
    "semi": ["error", "never"]
  }
}
